<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sartainstudios.radiobuttons.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you like John\&apos;s Android Studio Tutorials\?"
        android:textSize="30sp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:id="@+id/radio_group_johns_android_studio_tutorials_preference"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_button_I_passionately_love_them"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="I passionately love them"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/radio_button_I_somewhat_like_them"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="I somewhat like them"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/radio_button_I_think_they_are_okay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I think they are okay"
            android:textSize="25sp"
            android:checked="false" />

        <RadioButton
            android:id="@+id/radio_button_I_have_a_disintrest_in_them"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I have a disintrest in them"
            android:textSize="25sp"
            android:checked="false" />

        <RadioButton
            android:id="@+id/radio_button_I_have_no_opinion_on_them"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I have no opinion on them"
            android:textSize="25sp"
            android:checked="false" />
    </RadioGroup>

    <TextView
        android:id="@+id/text_view_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Your opinion will appear here"
        android:textSize="25sp"
        android:gravity="center" />
</LinearLayout>
